<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>
    <!--Account invoice: Form-->
    <record id="account_invoice_form_amount_text_dz" model="ir.ui.view">
        <field name="name">account.invoice_form_amount_text</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_form"/>
        <field name="arch" type="xml">
            <field name="payment_term" position="after">
                <!-- <field name="text_amount"/> -->
                <field name="payment_type" invisible="1"/>
            </field>
            <field name="payment_term" position="replace">
              <field name="payment_term" on_change="onchange_payment_term(payment_term,context)" attrs="{'readonly':[('state','not in', ['draft'])], 'required': True}" class="oe_inline"/>
            </field>
            <!--
                <field name="payment_term" position="attributes">
                <attribute name='required'>True</attribute>
                </field>
            -->
        </field>
    </record>



  </data>
</openerp>
