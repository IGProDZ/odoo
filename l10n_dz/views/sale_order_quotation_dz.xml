<?xml version="1.0"?>
<openerp>
  <data>

    <template id="contact" inherit_id="base.contact">
      <xpath expr="//div[@class='css_editable_mode_hidden'][1]" position="replace">
	<div t-if="address and 'address' in fields" class="css_editable_mode_hidden">
	  <i t-if="not options.get('no_marker')" class="fa fa-map-marker"/> <span itemprop="streetAddress" t-raw="address.replace('\n', options.get('no_tag_br') and ', ' or ('&lt;br/ %s'% ('' if options.get('no_marker') else '&amp;nbsp; &amp;nbsp;')))"/>
	  <div>
	    <span itemprop = "street2" t-raw="object.street2"/>
	  </div>
	  <span itemprop="zip" t-raw="object.zip"/>
	  <span t-if="object.commune_id.name">-
	  <span itemprop="commune_id.name" t-raw="object.commune_id.name"/></span>
	  <span t-if="object.city">(
	  <span itemprop="city" t-raw="object.city"/>),</span>
	  <span t-if="object.state_id.name"> W.
      	  <span itemprop="state_id.name" t-raw="object.state_id.name"/></span>
	</div>
      </xpath>
    </template>

